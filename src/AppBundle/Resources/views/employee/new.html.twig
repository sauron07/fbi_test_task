{% extends 'base.html.twig' %}

{% block page %}
    <div id="page-wrapper">
        <div class="container-fluid col-md-8">
            {% include('@App/templates/error_message.html.twig') %}

            {{ form_start(form) }}
            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        Create employee.
                        <a class="btn btn-default col-md-offset-4" href="{{ path('employee_list') }}" role="button">Back
                            to list</a>
                        <button type="submit" id="employee_save" name="employee[save]" class="btn btn-primary">Save
                        </button>

                    </h1>
                </div>
            </div>
            <div class="form-group row container-fluid">
                <label for="example-text-input" class="col-2 col-form-label">First name</label>
                <div class="col-10">
                    {{ form_widget(form.firstName) }}
                </div>
            </div>
            <div class="form-group row container-fluid">
                <label for="example-text-input" class="col-2 col-form-label">Last name</label>
                <div class="col-10">
                    {{ form_widget(form.lastName) }}
                </div>
            </div>
            <div class="form-group row container-fluid">
                <label for="example-text-input" class="col-2 col-form-label">Gender</label>
                <div class="col-10">
                    {{ form_widget(form.gender) }}
                </div>
            </div>
            <div class="form-group row container-fluid">
                <label for="example-text-input" class="col-2 col-form-label">Comment</label>
                <div class="col-10">
                    {{ form_widget(form.comment) }}
                </div>
            </div>
            <div class="form-group row container-fluid">
                <label for="example-text-input" class="col-2 col-form-label">Salay</label>
                <div class="col-10">
                    {{ form_widget(form.salary) }}
                </div>
            </div>
            <div class="form-group row container-fluid">
                <label class="col-2 col-form-label">Date of birth</label>
                <div class="col-10">
                    {{ form_widget(form.dateOfBirth) }}
                </div>
            </div>
            <div class="form-group row container-fluid">
                <div class="col-10">
                    <label class="col-2 col-form-label">Active</label>
                    {{ form_widget(form.isActive) }}
                </div>
            </div>
            <hr>

            {# Phones #}
            <label for="example-search-input" class="col-2 col-form-label">Phones</label>
            <div class="form-group row container-fluid phone-block collection">
                {% for phone in form.phones %}
                    <div class="entry">
                        <label class="col-2 col-form-label">Title</label>
                        <div class="col-4">
                            {{ form_widget(phone.title) }}
                        </div>
                        <label class="col-2 col-form-label">Number</label>
                        <div class="col-4">
                            {{ form_widget(phone.number) }}
                        </div>
                        <hr>
                    </div>
                {% endfor %}
                <div class="phones" data-prototype="{{ form_widget(form.phones.vars.prototype)|e('html_attr') }}"
                     data-count="{{ form.phones|length }}">
                </div>
            </div>
            {# Addresses #}
            <label for="example-search-input" class="col-2 col-form-label">Addresses</label>
            <div class="form-group row container-fluid collection">
                {% for address in form.addresses %}
                    <div class="entry">
                        <label class="col-2 col-form-label">City</label>
                        <div class="col-4">
                            {{ form_widget(address.city) }}
                        </div>
                        <label class="col-2 col-form-label">Street</label>
                        <div class="col-4">
                            {{ form_widget(address.street) }}
                        </div>
                        <label class="col-2 col-form-label">Post code</label>
                        <div class="col-4">
                            {{ form_widget(address.postcode) }}
                        </div>
                        <hr>
                    </div>
                {% endfor %}
                <div class="addresses" data-prototype="{{ form_widget(form.addresses.vars.prototype)|e('html_attr') }}"
                     data-count="{{ form.addresses|length }}">
                </div>
            </div>
            {{ form_widget(form._token) }}
        </div>
    </div>
{% endblock %}